# 1. Redirect HTTP to HTTPS
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _; 
    return 301 https://$host$request_uri;
}

# 2. The HTTPS Server
server {
    #listen 443 ssl;
    
    #listen [::]:443 ssl;
    server_name secretapples.org; # Replace with your domain if you have one
    autoindex on;
    root /var/www/html;
    index index.html index.htm;

    # SSL Certificates (Required for HTTPS to start)
    # If using Certbot, these paths will be updated automatically
    # 404 Configuration
    error_page 404 /404.html;
    location = /404.html {
        root /var/www/html;
        internal;
    }

    location / {
        try_files $uri $uri/ =404;
    }
}
